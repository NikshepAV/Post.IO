<% include ../partials/header %>

<div class="ui container">
    <div class="row">
        <h1 style="text-align: center">Edit comment</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form class="ui form" action="/posts/<%= post_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="ui fluid left icon input field">
                    <input type="text" value="<%= comment.text %>" name="comment[text]">
                    <i class="user icon"></i>
                </div>
                <div class="field">
                    <button class="ui right floated animated fade positive button">
                        <div class="visible content">
                            Add
                        </div>
                        <div class="hidden content">
                            <i class="right arrow icon"></i>
                        </div>
                    </button>
                </div>
            </form>
            <a class="ui left floated animated fade secondary button" href="/posts/<%= post_id %>">
                <div class="visible content">
                    Go Back
                </div>
                <div class="hidden content">
                    <i class="left arrow icon"></i>
                </div>
            </a>
        </div>
    </div>
</div>

<% include ../partials/footer %>